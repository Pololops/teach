{
  "name": "@teach/shared",
  "version": "0.1.0",
  "description": "Shared types and utilities for Teach monorepo",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch"
  },
  "keywords": ["types", "shared", "teach"],
  "author": "",
  "license": "MPL 2.0",
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "typescript": "^5.9.0"
  },
  "packageManager": "pnpm@10.22.0"
}
